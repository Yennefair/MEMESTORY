<div class="memecard-container">

  <div class="meme-title">
    <p><%= @meme.title %></p>
  </div>

  <div class="meme-image">
      <%= cl_image_tag @meme.photo.key %>
  </div>

  <div class="meme-votes">

      <div class="upvote-container" >
        <%= link_to upvote_meme_path(@meme), class:"", method: :put do %>
        <button class="fas fa-angle-up"></button>
          <p><%= @meme.get_upvotes.size %></p>
        <% end %>
      </div>


      <div class="downvote-container">
        <%= link_to downvote_meme_path(@meme), class:"fas fa-angle-down", method: :put do %>
        <span><%= @meme.get_downvotes.size %></span>
        <% end %>
      </div>
  </div>

  <div data-controller="voter">
    <div class="div">
      <span data-target="voter.count"><%= @meme.get_upvotes.size %></span>
    </div>

    <button data-action="click->voter#refresh" class="btn btn-primary"></button>
  </div>

</div>
