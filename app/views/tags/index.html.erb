<h1>All categories</h1>

<div class="categroies-container d-flex">

  <% @tags.each do |t| %>
    <%= link_to edit_tag_path(t.id) do %>
     <div class="category-card">
        <%= t %>
     </div>
    <% end %>
  <% end %>

</div>

<h1 class="mt-4">All USER categories</h1>

<div class="user-categroies-container d-flex">

  <% @usertags.each do |t| %>
      <%= link_to edit_tag_path(t.id) do %>
        <div class="category-card">
          <%= t %>
        </div>
      <% end %>
  <% end %>

</div>

<%= link_to "create new category (tag)", new_tag_path %>
